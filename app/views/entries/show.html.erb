<body id="entry-background">
  <div class="in-entry-button-container">
    <%= link_to 'All Entries', entries_path, class: "in-entry-button button-entries" %>
    <%= link_to 'Edit', edit_entry_path(@entry), class: "in-entry-button button-edit" %>
    <%= link_to 'Destroy', @entry, method: :delete, data: { confirm: 'Do you want to delete this entry?' }, class: "in-entry-button button-delete" %>
  </div>
  <div class="card-container card-vertical">
    <div class="card-overflow card-vertical card-def">

      <h1>
        <%= @entry.title %>
      </h1>
      <h4 style><em><%=@entry.created_at.strftime("%B %d, %Y")%></em></h4>
      <hr>

      <% if @entry.photo.attached? %>
      <image src="<%=(url_for(@entry.photo))%>" class="entry-image">
        <%end%>
        <p>
          <%= h(@entry.text).gsub(/(?:\n\r?|\r\n?)/, '<br>').html_safe %>
        </p>

    </div>
  </div>
</body>