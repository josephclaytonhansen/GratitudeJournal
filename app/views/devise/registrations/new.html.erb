<div class="card-container card-vertical">
  <div class="card-white card-vertical card-def">
    <div class="spinners-container">
      <div class="spinners-parent">
        <div class='spinning-frame spinning-frame-a'></div>
        <div class='spinning-frame spinning-frame-b'></div>
        <div class='spinning-frame spinning-frame-c'></div>
        <div class='spinning-frame spinning-frame-img'></div>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="entry-container">
      <div class="white-entry">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'entry-field', placeholder: "Email"%>
      </div>

      <div class="white-entry">
        <%= f.password_field :password, autocomplete: "new-password", class: 'entry-field', placeholder: "Password (6+ characters)" %>
      </div>

      <div class="white-entry">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'entry-field', placeholder: "Confirm password" %>
      </div>

      <div class="buttons-row">
        <div class="main-button">
          <%= f.submit "Create account" %>
        </div>
        <div class="submit-button">
          <%= link_to "Back to log in", new_session_path(resource_name) %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>