<div class="card-container card-vertical">
  <div class="card-white card-vertical card-def">
    <div class="spinners-container">
      <div class="spinners-parent">
        <div class='spinning-frame spinning-frame-a'></div>
        <div class='spinning-frame spinning-frame-b'></div>
        <div class='spinning-frame spinning-frame-c'></div>
        <div class='spinning-frame spinning-frame-img'></div>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="entry-container">
      <div class="white-entry">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'entry-field', placeholder: "Email" %>
      </div>

      <div class="white-entry">
        <%= f.password_field :password, autocomplete: "current-password", class: 'entry-field', placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="white-entry">
        <%= f.check_box :remember_me, class: "entry-checkbox" %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="buttons-row">
        <div class="main-button">
          <%= f.submit "Log in" %>
        </div>
        <div class="submit-button">
          <%= link_to "Sign up", new_registration_path(resource_name) %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>